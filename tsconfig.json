{
  "compilerOptions": {     
  "lib": ["dom", "dom.Iterable", "esnext"],                                        
  "allowJs": true,                                  
  "jsx": "react-jsx",                                
  "noEmit": true,                                   
  "strict": true,
  "moduleResolution": "node",                       
  "resolveJsonModule": true,                        
  "isolatedModules": true,                          
  "allowSyntheticDefaultImports": true,             
  "esModuleInterop": true,                             
  "skipLibCheck": true,
  "module": "commonjs",                                
  "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
} 